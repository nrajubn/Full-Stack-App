<!--
*  Location edit view
*  Uses HTML and embedded JavaScript (EJS) 
*  to dyanmically create a webpage to edit the resource.
*
* 
-->

<div class="card">
  <div class="card-header">
    Edit Location
  </div>
  <div class="card-body">
    <form action="/location/save/<%= location.locationId %>" method="post">

      <div class="form-group">
        <label for="locationName">Name:</label>
        <input type="text" class="form-control" id="locationName" name="locationName" value="<%= location.locationName %>" autocomplete="off">
      </div>
     
      <br>

      <div class="form-group">
        <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
      </div>
      
    </form>
  </div>
</div>