<% if (location && location.error) { %>
  <div class="alert alert-danger" role="alert">
    <%- JSON.stringify(location.error) %>
  </div>
  <% } %>
  <div class="card">
    <div class="card-header">Add Location</div>
    <div class="card-body">
      <form name="myForm" action="/location/save" method="post">
        <div class="form-group">
          <label for="locationName">Location Name:</label>
          <input
            type="text"
            class="form-control"
            id="locationName"
            name="locationName"
            pattern="^([a-zA-Z]+\s)*[a-zA-Z]+$"
            title="LocationName only letters and single spaces, no numbers or punctuation."
            autocomplete="off"
            required
          />
        </div>
        <div class="row form-group">
          <% for(let index = 0; index< 4; index++) { %>
          <div class="col-md-6 mb-0 mt-1">
            <label for="coordinate[<%= index %>][latitude]" class="col-md-6"
              >Point <%= index+1 %> - Latitude:</label
            >
            <input
              type="number"
              class="form-control col-md-6"
              id="coordinate[<%= index %>][latitude]"
              name="coordinate[<%= index %>][latitude]"
              min="-90"
              max="90"
              step=".00000001"
              autocomplete="off"
              required
            />
          </div>
          <div class="col-md-6 mb-0 mt-1">
            <label for="coordinate[<%= index %>][longitude]"
              >Point <%= index+1 %> - Longitude:</label
            >
            <input
              type="number"
              class="form-control"
              id="coordinate[<%= index %>][longitude]"
              name="coordinate[<%= index %>][longitude]"
              min="-180"
              max="180"
              step=".00000001"
              autocomplete="off"
              required
            />
          </div>
          <% } %>
        </div>
  
        <div class="form-group mt-2">
          <input
            type="submit"
            class="btn btn-info"
            title="Submits a POST /save request"
            value="Create"
          />
        </div>
      </form>
    </div>
  </div>