

    <% if (location && location.error) { %>
      <div class="alert alert-danger" role="alert"><%- JSON.stringify(location.error) %></div>
      <% } %>
      <div class="card">
        <div class="card-header">Add Location</div>
        <div class="card-body">
          <form name="myForm" action="/location/save" method="post">
            <div class="form-group">
              <label for="locationName">Location Name:</label>

              <input
              type="text"
              class="form-control"
              id="locationName"
              name="locationName"
              pattern="^([a-zA-Z]+\s)*[a-zA-Z]+$"
              title="LocationName only letters and single spaces, no numbers or punctuation."
              autocomplete="off"
              required
            />
          </div>
          
            <form name="myForm" action="/location/save"   method="post" >	
              <div class="form-group_locId">	
                  
                <label for="locationId">Location Id:</label>	
                <input type="number"  id="locationId" name="locationId" value="<%= location.locationId %>" autocomplete="on">	
              </div>	
              <div class="form-group">	
                <label for="locationName">Location Name:</label>	
                <input type="text"  id="locationName" name="locationName" value="<%= location.locationName %>" pattern="^([a-zA-Z]+\s)*[a-zA-Z]+$" title="LocationName only letters and single spaces."autocomplete="off" required>	
              </div>	
              <br>	
              <div class="form-group">	
                <label for="locationLatitude">Location Latitude:</label>	
                <input type="number"  id="locationLatitude" name="locationLatitude" value="<%= location.locationLatitude %>"  min=-90 max=90 step=.00001 autocomplete="off" required >	
              </div>	
              <br>	
              <div class="form-group">	
                <label for="locationLongitude">Location Longitude:</label>	
                <input type="number"   id="locationLongitude" name="locationLongitude" value="<%= location.locationLongitude %>"  min=-180 max=180 step=.00001 autocomplete="off" required>	
              </div>
                  <br>
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save request" value="Create" />
        </div>
      </form>
    </div>
  </body>
</html>
