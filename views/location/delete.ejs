<!--
*  Location delete view
*  Uses HTML and embedded JavaScript (EJS) 
*
-->
<% if (location.error) { %>
    <div class="alert alert-danger" role="alert"><%- location.error %></div>
    <% } %>
    
    <div class="card-body">
    
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th width=>Action</th>
          </tr>
        </thead>
        <tbody>
    
          <tr>
            <th scope="row"><%= locationId %></th>
            <td><%= locationName%></td>
            <td>
              <form action="/location/delete/<%=location.id%>" method="post">
                <input type="submit" class="btn btn-danger delete" value="Delete" onclick="return alert('Are you sure?')"/>
              </form>
            </td>
          </tr>
    
        </tbody>
      </table>
