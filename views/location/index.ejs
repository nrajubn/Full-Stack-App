<% if (locals.locations.success) { %>
    <div class="alert alert-success" role="alert"><%- location.success %></div>
    <% } %>
    
    <% if (locals.locations.error) { %>
    <div class="alert alert-danger" role="alert"><%- location.error %></div>
    <% } %>
    
    <div class="card">
      <div class="card-header">
        <ul class="nav nav-pills w-100">
          <li class="nav-pill active">
            <a class="nav-link">Locations</a>
          </li>
          <li class="nav-pill ml-auto">
            <a class="nav-link active" href="/location/create"><i class="fas fa-plus"></i></a>
          </li>
        </ul>
      </div>
      <div class="card-body">
    
        <% if(locations.length) { %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Location</th>
              <th >Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(let i = 0; i< locations.length; i++) { %>
            <tr>
              <th scope="row"><%= locations[i].id %></th>
              <td><%= locations[i].name%></td>
              <td>
                <a class="btn btn-primary details" href="../location/details/<%=locations[i].id%>"><i
                    class="fab fa-sistrix" title="details"></i></a>
                <a class="btn btn-success edit" href="../location/edit/<%=locations[i].id%>"><i class="fas fa-user-edit"title="edit"></i></a>
                <a class="btn btn-danger delete" href="../location/delete/<%=locations[i].id%>"><i
                    class="fas fa-trash-alt"></i></a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% } %>
    
        <!-- if result is empty -->
        <% if(!locations.length) { %>
        <p class="text-center">No locations found!</p>
        <% } %>
    
        <br>
        <!-- <h3>Mouse over icons to see where you will go.</h3> -->
    
      </div>
    </div>