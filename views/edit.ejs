<!--
*  Location edit view
*  Uses HTML and embedded JavaScript (EJS) 
*
<div class="card">
    <div class="card-header">
      Edit Location
    </div>
    <div class="card-body">
      <form action="/location/save/<%= location.id %>" method="post">
  
        <div class="form-group">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= location.name %>" autocomplete="off">
        </div>
       
        <br>
  
        <div class="form-group">
          <input type="submit" class="btn btn-info" title="Submits a POST /save/:id request" value="Save" />
        </div>
       
      </form>
    </div>
  </div>
